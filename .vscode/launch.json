    "version": "0.2.0",
    "configurations": [


        {
            "name": "getrelay",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app-cli/getrelay",
            "cwd": "${workspaceFolder}/build/app-cli/",
            "externalConsole": false
        },

        {
            "name": "setrelay",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app-cli/setrelay",
            "cwd": "${workspaceFolder}/build/app-cli/",
            "externalConsole": false,
            "args": ["R2_2=1"]
        },

        {
            "name": "relaybox",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app-gui/relaybox",
            "cwd": "${workspaceFolder}/build/app-gui/",
            "externalConsole": false,
        },

        {
            "name": "libusbrelaymodule-unit-tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/libusbrelaymodule/tests/unit/libusbrelaymodule-unit-tests",
            "cwd": "${workspaceFolder}/build/libusbrelaymodule/tests/unit/",
            "externalConsole": false
        },

        {
            "name": "app-cli-unit-tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app-cli/tests/unit/app-cli-unit-tests",
            "cwd": "${workspaceFolder}/build/app-cli/tests/unit/",
            "externalConsole": false
        },

        {
            "name": "app-gui-unit-tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app-gui/tests/unit/app-gui-unit-tests",
            "cwd": "${workspaceFolder}/build/app-gui/tests/unit/",
            "externalConsole": false
        }
    ]
}
